{
  "builders": [
    {
      "type": "docker",
      "image": "toolisticon/base-builder-image",
      "pull": false,
      "commit": true,
      "changes": ["VOLUME /data", "WORKDIR /data", "ENTRYPOINT /bin/bash"]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "ansible/playbook.yml",
      "extra_arguments": ["-v"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "toolisticon/nodejs-builder",
        "tag": "latest"
      }
    ]
  ]
}
